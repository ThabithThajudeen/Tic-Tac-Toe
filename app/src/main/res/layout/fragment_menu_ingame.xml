<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="44sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnThemes"
        style="@style/AppButtonStyle"
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:text="Themes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <Button
        android:id="@+id/btnCondition4"
        style="@style/AppButtonStyle"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Win-4"
        app:layout_constraintEnd_toStartOf="@+id/btnCondition5"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toEndOf="@+id/btnCondition3"
        app:layout_constraintTop_toBottomOf="@+id/btnThemes"
        app:layout_constraintWidth_percent="0.33" />

    <Button
        android:id="@+id/btnCondition3"
        style="@style/AppButtonStyle"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Win-3"
        app:layout_constraintEnd_toStartOf="@+id/btnCondition4"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThemes"
        app:layout_constraintWidth_percent="0.33" />

    <Button
        android:id="@+id/btnCondition5"
        style="@style/AppButtonStyle"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Win-5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/btnCondition4"
        app:layout_constraintTop_toBottomOf="@+id/btnThemes"
        app:layout_constraintWidth_percent="0.33" />


    <Button
        android:id="@+id/btnMainMenu"
        style="@style/AppButtonStyle"
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Main Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCondition4" />

    <Button
        android:id="@+id/btnResume"
        style="@style/AppButtonStyle"
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Resume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMainMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>