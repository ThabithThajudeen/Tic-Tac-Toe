<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment4x4">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/grid4x4removedbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="404dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tile0"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile1"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile2"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile3"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/blankgrid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tile4"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile5"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile6"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile7"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tile8"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile9"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile10"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile11"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tile12"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile13"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile14"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />

            <ImageView
                android:id="@+id/tile15"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/blankgrid" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btnIn"
        style="@style/AppButtonStyle"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:text="settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.875" />

    <Button
        android:id="@+id/undoButton"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="Undo"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintVertical_bias="0.269" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="123dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_weight="1"
        android:text="Reset"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/undoButton"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerText"
        app:layout_constraintVertical_bias="0.265" />
</androidx.constraintlayout.widget.ConstraintLayout>

