<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- This is the border color. Change as needed. -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
        </shape>
    </item>

    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- This is the background color. Change as needed. -->
        </shape>
    </item>

</layer-list>
